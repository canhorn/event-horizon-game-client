{
    "extends": [
        "tslint:recommended",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "rulesDirectory": [
        "tslint-plugin-prettier"
    ],
    "rules": {
        "prettier": true,
        "interface-name": false,
        "object-literal-sort-keys": false,
        "no-empty-interface": false,
        "variable-name": [
            true,
            "allow-leading-underscore"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "always"
                },
                "singleline": "never",
                "esSpecCompliant": false
            }
        ]
    }
}